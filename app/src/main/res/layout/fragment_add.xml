<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddFragment">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Task"
        android:textSize="26sp"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task title"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        />

    <EditText
        android:id="@+id/task_title_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        android:layout_margin="16dp"
        android:hint="  Type here"
        android:padding="8dp"
        android:background="#C6E3E3E3"
        android:drawableStart="@drawable/ic_library_books"
        />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/task_title_edt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        />

    <EditText
        android:id="@+id/date_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/text_date"
        android:layout_margin="16dp"
        android:hint="  05 June 2021"
        android:padding="8dp"
        android:focusableInTouchMode="false"
        android:textIsSelectable="false"
        android:gravity="start|center_vertical"
        android:background="#C6E3E3E3"
        android:drawableStart="@drawable/ic_baseline_date"
        />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/date_edt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        />

    <EditText
        android:id="@+id/time_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/text_time"
        android:layout_margin="16dp"
        android:hint="  12:00 pm"
        android:padding="8dp"
        android:focusableInTouchMode="false"
        android:textIsSelectable="false"
        android:gravity="start|center_vertical"
        android:background="#C6E3E3E3"
        android:drawableStart="@drawable/ic_baseline_time"
        />

    <TextView
        android:id="@+id/text_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/time_edt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="#C6E3E3E3"
        android:drawableStart="@drawable/ic_baseline_hourglass"
        android:gravity="start|center_vertical"
        android:hint="  30 minutes before"
        android:padding="8dp"
        android:focusableInTouchMode="false"
        android:textIsSelectable="false"
        app:layout_constraintTop_toBottomOf="@id/text_alarm"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/create_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#04CC80"
        android:text="Create Task"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>